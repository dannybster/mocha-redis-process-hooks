{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "node",
            "args": [
                "${workspaceRoot}/tests/",
                "--recursive"
            ],
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "REDIS_PATH": "${env.REDIS_PATH}/src",
                "REDIS_PORT": "7777",
                "LOG_LEVEL": "20",
                "PROGRAM_TIMEOUT": "10000"
            }
        }
    ]
}